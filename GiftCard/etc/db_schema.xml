<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="gift_card" resource="default" engine="innodb" comment="Gift Cards">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>

        <column xsi:type="int" name="assigned_customer_id" padding="10" unsigned="true" nullable="true" comment="Customer ID"/>

        <column xsi:type="varchar" name="code" length="255" nullable="false" comment="Gift card code"/>
        <column xsi:type="int" name="status" unsigned="true" nullable="false" comment="Status"/>

        <column xsi:type="decimal" name="initial_value" scale="6" precision="20" unsigned="false" nullable="true" comment="Initial value"/>
        <column xsi:type="decimal" name="current_value" scale="6" precision="20" unsigned="false" nullable="true" comment="Current value"/>

        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"/>

        <column xsi:type="varchar" name="recipient_email" length="255" nullable="false" comment="Recipient email"/>
        <column xsi:type="varchar" name="recipient_name" length="255" nullable="false" comment="Recipient name"/>


        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="GIFT_CARD_CUSTOMER_ID_CUSTOMER_ENTITY_ID"
                    table="gift_card" column="assigned_customer_id" referenceTable="customer_entity"
                    referenceColumn="entity_id" onDelete="CASCADE"/>

    </table>

    <table name="gift_card_usage" resource="default" engine="innodb" comment="Gift Card Usage Log">

        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>

        <column xsi:type="int" name="gift_card_id" padding="10" unsigned="true" nullable="false" comment="Gift Card ID"/>

        <column xsi:type="int" name="order_id" padding="10" unsigned="true" nullable="false" comment="Order ID"/>

        <column xsi:type="decimal" name="value_change" scale="6" precision="20" unsigned="false" nullable="true" comment="Value change"/>

        <column xsi:type="text" name="notes" nullable="false" comment="Notes"/>

        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>

        <!-- Primary key -->
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>

    </table>

</schema>
